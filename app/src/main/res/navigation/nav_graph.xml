<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_conversation_list">
    <fragment
        android:id="@+id/fragment_conversation_list"
        android:name="com.senijoshua.wazzap.presentation.home.ConversationListFragment"
        android:label="ConversationList"
        tools:layout="@layout/fragment_conversation_list">

        <action
            android:id="@+id/conversation_list_to_conversation_details"
            app:destination="@+id/fragment_conversation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragment_conversation"
        android:name="com.senijoshua.wazzap.presentation.chat.ConversationFragment"
        android:label="Conversation"
        tools:layout="@layout/fragment_conversation" />
</navigation>
